<main role="main">
    <div class="album py-5 bg-light">
        <div class="container"> 
            <div class="row">
                <div class="col-md-10" style="border-right:1px solid grey;">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item bc-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item bc-item"><a href="/projects">Projects</a></li>
                            <li class="breadcrumb-item" aria-current="page">{{ project.name }}</li>
                        </ol>
                    </nav>

                    <h1 class="display-3">{{ project.name }} </h1>
                    <br>
                    <p class="lead">{{ project.description }}</p>
                    <br>
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                            <img class="d-block w-100" src="/projects/{{project.alias}}/images/slides/slide1.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                            <img class="d-block w-100" src="/projects/{{project.alias}}/images/slides/slide2.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                            <img class="d-block w-100" src="/projects/{{project.alias}}/images/slides/slide3.jpg" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="col-md-2">
                    <div>
                        <a href="/projects/{{project.alias}}/demo" class="btn btn-primary">Live Demo</a>
                        <br><br>
                        <a href="{{ project.githubUrl }}" class="btn btn-secondary">Github Link</a>
                        <br><br>
                        <hr>
                        <br>
                        <h2>Tags</h2>
                        {{#each project.tags}}
                            <span class="badge badge-{{class}}">{{name}}</span>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>